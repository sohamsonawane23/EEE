section .bss
    char resb 1          ; reserve a byte for the input character

section .text
    global _start

_start:
    ; read 1 byte from standard input
    mov eax, 3           ; sys_read syscall number
    mov ebx, 0           ; stdin (default)
    mov ecx, char        ; memory where char will be stored
    mov edx, 1           ; read one byte
    int 0x80             ; call kernel

    ; write 1 byte to standard output
    mov eax, 4           ; sys_write syscall number
    mov ebx, 1           ; stdout (default)
    mov ecx, char        ; memory where char is stored
    mov edx, 1           ; write one byte
    int 0x80             ; call kernel

    ; exit program
    mov eax, 1           ; sys_exit syscall number
    xor ebx, ebx         ; exit code 0
    int 0x80             ; call kernel